    </LinearLayout>
    <TextView
        android:id="@+id/search"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:padding="8dp"
        android:text="真题"
        android:textSize="14sp" />

</LinearLayout>