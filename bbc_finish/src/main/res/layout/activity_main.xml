<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/blank_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:measureAllChildren="true"
        android:orientation="vertical" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@+id/main"
        android:background="#e2e2e2" />

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_bottom_image_1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/pic"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home_home_bg" />

            <TextView
                android:id="@+id/tv_home_bottom_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="首页"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_video"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_video_main_bg" />

            <TextView
                android:id="@+id/tv_main_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="视频"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mooc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_main_mooc"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/imooc_bg" />

            <TextView
                android:id="@+id/tv_main_mooc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="微课"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_ll_trainingcamp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_iv_trainingcamp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/nav_tc_off" />

            <TextView
                android:id="@+id/main_tv_trainingcamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="训练营"
                android:textSize="11sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home_bottom_image_me"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginTop="3dp"
                android:contentDescription="@string/pic"
                android:scaleType="centerInside"
                android:src="@drawable/icon_home_me_bg" />

            <TextView
                android:id="@+id/tv_home_bottom_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="我"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>