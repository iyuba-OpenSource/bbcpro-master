<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SegmentControl">
        <attr name="cornerRadiuss" format="dimension|reference" />
        <attr name="colors" format="color|reference" />
        <attr name="textSelectedColors" format="color|reference" />
        <attr name="texts" format="string|reference" />
        <attr name="android:textSize" />
        <attr name="direction2" format="enum">
            <enum name="horizon" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <!-- 外部边框的width -->
        <attr name="boundWidth" format="dimension|reference" />
        <!-- 内部边框的width -->
        <attr name="separatorWidth" format="dimension|reference" />
        <attr name="gaps" format="dimension|reference" />
        <attr name="horizonGap" format="dimension|reference" />
        <attr name="verticalGap" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="LoadingCircle">
        <attr name="lcborder_color" format="color" />
        <attr name="lcborder_width" format="dimension" />
        <attr name="lcradius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="RoundCornerButton">
        <attr name="rcb_backgroundColor" format="color" />
        <attr name="rcb_backgroundColorDisabled" format="color" />
        <attr name="rcb_cornerRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="circleProgressBar">
        <attr name="circleColor" format="color" />
        <attr name="circleProgressColor" format="color" />
        <attr name="circleWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>


    </declare-styleable>


    <declare-styleable name="CircularImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_outside_color" format="color" />
        <attr name="border_inside_color" format="color" />
    </declare-styleable>

    <attr name="textModeColor" format="color|reference" />
    <attr name="mainBackground" format="color|reference" />
    <attr name="titleBarColor" format="color|reference" />
    <attr name="buttonBackColor" format="color|reference" />
    <attr name="buttonTextColor" format="color|reference" />
    <attr name="commentBackground" format="color|reference" />

    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension" />
        <attr name="btnTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MenuItemView">
        <attr name="img" format="reference" />
        <attr name="imgSize" format="dimension" />
        <attr name="text" format="string" />
        <attr name="secondtext" format="string" />
        <attr name="iconenable" format="boolean" />

    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="newCircleColor" format="color"/>
        <attr name="newCircleProgressColor" format="color"/>
        <attr name="newTextColor" format="color"/>
        <attr name="newTextSize" format="dimension"/>
        <attr name="newMax" format="integer"/>
        <attr name="newTextIsDisplayable" format="boolean"/>
        <attr name="newCircleWidth" format="dimension"></attr>
        <attr name="newCircleMargin" format="dimension"/>
        <attr name="style">
            <enum name="STROKE" value="0"/>
            <enum name="FILL" value="1"/>
        </attr>
    </declare-styleable>


</resources>